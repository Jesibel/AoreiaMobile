<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
 xmlns:gap   = "http://phonegap.com/ns/1.0"
 id          = "com.aoreia.test"
 versionCode = "10" 
 version     = "1.0.0" >

  <!-- versionCode is optional and Android only -->

  <name>Aoreia Mobile</name>

  <description>
  An example for phonegap build docs. 
  </description> 

  <author href="http://test.aoreia.com" email="jesibelaranguren@gmail.com">
  Hardeep Shoker 
  </author>
  
   <feature name="http://api.phonegap.com/1.0/network"/>
   <feature name="http://api.phonegap.com/1.0/media"/>
   <feature name="http://api.phonegap.com/1.0/file"/>
   <feature name="http://api.phonegap.com/1.0/notification"/>
 
  <content src="index.html" />

  <!-- Preferences -->

  <!--preference name="orientation" value="landscape" /-->
  <preference name="orientation" value="portrait" />
  <preference name="show-splash-screen-spinner" value="false" />
  <preference name="android-minSdkVersion" value="14" />       <!-- JB 4.0 -->

  <preference name="SplashScreen" value="splash" />
  <preference name="SplashScreenDelay" value="10000" /> <!-- ios: if set to false, the spinner won't appear on the splash screen during app loading -->
  <!--preference name="stay-in-webview" value="true" /--> 
 
  <!-- Define app icon for each platform. -->
  <icon src="resources/image/icon.png" />
  <icon src="resources/image/logo36.png"   gap:platform="android"    gap:density="ldpi" />
  <icon src="resources/image/logo48.png"   gap:platform="android"    gap:density="mdpi" />
  <icon src="resources/image/logo72.png"   gap:platform="android"    gap:density="hdpi" />
  <icon src="resources/image/logo96.png"   gap:platform="android"    gap:density="xhdpi" />
  

  <gap:splash src="resources/image/logo_aoreia_480.png"        gap:platform="android" gap:qualifier="port-ldpi" />
  <gap:splash src="resources/image/logo_aoreia_768.png"        gap:platform="android" gap:qualifier="port-mdpi" />
  <gap:splash src="resources/image/logo_aoreia_960.png"        gap:platform="android" gap:qualifier="port-hdpi" />
  <gap:splash src="resources/image/logo_aoreia_1024.png"       gap:platform="android" gap:qualifier="port-xhdpi" />


  <gap:plugin name="org.apache.cordova.media" />	

  <gap:plugin name="com.boyvanderlaak.cordova.plugin.orientationchanger" version="0.1.1" />
  
  <gap:plugin name="org.li8.inappbrowser" version="0.1" />
  
  <gap:plugin name="io.github.pwlin.cordova.plugins.fileopener" version="1.0.1" />
  
  
  


  <access origin="http://test.aoreia.com" />       
  <access origin="http://test.aoreia.com" subdomains="true" /> 
  <access origin="*"/>
  
  

</widget>